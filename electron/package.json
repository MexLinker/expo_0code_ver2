{
  "name": "myapp-electron",
  "version": "0.0.1",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build:win": "electron-builder -w nsis",
    "build:win:dir": "electron-builder -w dir"
  },
  "devDependencies": {
    "electron": "^32.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.obytes.myapp",
    "productName": "MyApp",
    "files": [
      "../dist/**/*",
      "**/*"
    ],
    "directories": {
      "output": "../release-electron"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    }
  }
}